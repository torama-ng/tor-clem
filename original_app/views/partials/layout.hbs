        crossorigin="anonymous">


    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/layout.css" />

    <!-- Custom styles for this template -->
    <link href="/stylesheets/offcanvas.css" rel="stylesheet">
    <link href="/stylesheets/my.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
            <a style="color:red" href="/" class="navbar-brand pl-2"><span class="fas fa-code fa-lg"></span> TORAMA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon bg-danger"></span>
            </button>

            <div id="sech" class=" ml-3 mb-4 mb-xs-1">
                
                    <form class="input-group col-xs-" action="/courses/finder" method="POST">
                        <input type="text" name="search" class="form-control" placeholder="Search">
                        <div class="input-group-append">
                            <button class="btn btn-dark" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
            </div>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link text-white"><i class="fas fa-home fa-1x"></i></a>
                    </li>
                    {{#if user}}

                    <li class="nav-item">
                        <a href="/user/profile" class="nav-link text-white"><i class="fas fa-user-alt fa-1x"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="/user/create_playlist" class="nav-link text-white"><i class="fas fa-upload fa-1x"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="/user/logout" class="nav-link text-white"><i class="fas fa-sign-out-alt fa-1x"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="/courses/all" class="nav-link text-white">All</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle text-white" id="navbarDropdown" data-toggle="dropdown"><strong
                                class="vid">Video Categories</strong></a>
                        <div class="dropdown-menu">
                            <a href="/courses/nodejs" class="dropdown-item">nodejs</a>
                            <a href="/courses/bootstrap" class="dropdown-item">Bootstrap</a>
                            <a href="/courses/handlebars" class="dropdown-item">Handlebars</a>
                            <a href="/courses/javascript" class="dropdown-item">Javascript</a>
                            <a href="/courses/mongod" class="dropdown-item">Mongodb</a>
                            <a href="/courses/upload" class="dropdown-item">Uploads</a>
                            <a href="/courses/Vue" class="dropdown-item">Vuejs</a>
                            <a href="/courses/react" class="dropdown-item">React</a>
                            <a href="/courses/angular" class="dropdown-item">Angular</a>
                            <a href="/courses/html" class="dropdown-item">HTML</a>
                            <a href="/courses/css" class="dropdown-item">css/sass</a>
                            <a href="/courses/linux" class="dropdown-item">Linux</a>
                            <a href="/courses/python" class="dropdown-item">Python</a>
                            <a href="/courses/bash" class="dropdown-item">Bash</a>
                            <a href="/courses/crypto" class="dropdown-item">Crypto</a>
                            <a href="/courses/usermgt" class="dropdown-item">User Mgt</a>
                            <a href="/courses/wireframe" class="dropdown-item">Wireframe</a>
                        </div>
                    </li>

                    {{else}}
                    <li class="nav-item">
                        <a href="/user/login" class="nav-link">Login</a>
                    </li>


                    <li class="nav-item">
                        <a href="/user/sign_up" class="nav-link">Register</a>
                    </li>
                    {{/if}}
                </ul>
            </div>

        </nav>

        <main role="main" class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    {{# if user}}
                    <div class="alert alert-primary">Welcome {{user.name}}</div>
                    {{/if}}
                    {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                    {{/if}}

                    {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                    {{/if}}

                    {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    {{/if}}

                </div>
            </div>
            <div>{{{body}}}</div>
        </main>

        <footer>
            <br /><br /> <br />
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">Â© 2019 Copyright:
                <a href="https://torama.ng"> <span class="fas fa-code fa-md"> Torama Innovation Hub</span></a>
            </div>
            <!-- Copyright -->

        </footer>
    </div>



